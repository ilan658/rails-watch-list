<h1>Créer une nouvelle liste</h1>

<%= simple_form_for @list, html: { class: 'form-horizontal' } do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "erreur") %> interdit la création de cette liste :</h2>
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name, label: "Nom de la liste", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :image_url, label: "URL de l'image (optionnel)", input_html: { class: 'form-control', placeholder: 'https://example.com/image.jpg' } %>
  </div>

  <div class="form-actions">
    <%= f.submit "Créer la liste", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Retour à toutes les listes', lists_path, class: "btn btn-secondary" %>
