<h1 class="text-center my-4">Créer une nouvelle liste</h1>

<div class="container">
  <%= simple_form_for @list, html: { class: 'form-horizontal' } do |form| %>
    <% if @list.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(@list.errors.count, "erreur") %> empêchent la création :</h4>
        <ul>
          <% @list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.input :name, label: "Nom de la liste", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.input :image_url, label: "URL de l'image", placeholder: "https://example.com/image.jpg", input_html: { class: 'form-control' } %>
    </div>

    <div class="text-center">
      <%= form.button :submit, "Créer la liste", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to 'Retour à toutes les listes', lists_path, class: "btn btn-secondary mt-3" %>
  </div>
</div>
