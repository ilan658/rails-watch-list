<div class="container my-4">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <h2>Signets dans cette liste</h2>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <%# Affiche l'affiche du film %>
          <% if bookmark.movie.poster_url.present? %>
            <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.comment %></p>
            <%= link_to "Supprimer", bookmark_path(bookmark), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to 'Ajouter un signet', new_list_bookmark_path(@list), class: "btn btn-primary me-2" %>
    <%= link_to 'Retour Ã  toutes les listes', lists_path, class: "btn btn-secondary" %>
  </div>
</div>

